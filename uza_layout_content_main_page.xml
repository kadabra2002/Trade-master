<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/toolbar"
        android:background="#070781"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/buttondrawertoggle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_menu_24"
            android:background="@android:color/transparent"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="UZA/NUNUA APP"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:text="CHAGUA AINA YA KITU UNACHOTAKA KUNUNUA AU KUUZA"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/maelezo"
        android:layout_below="@id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/maelezo"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/mavazi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="MAVAZI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/samani"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="SAMANI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781" />

            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/shule"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="SHULE"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/nyumba"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="NYUMBA"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"/>

            </LinearLayout>

            <!-- Third Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/vipodozi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="VIPODOZI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/shamba"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="SHAMBA"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"/>

            </LinearLayout>

            <!-- Fourth Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/ndani"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="NDANI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/madawa"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="MADAWA"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781" />

            </LinearLayout>

            <!-- Fifth Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/ofisi"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="OFISI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/maji"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:text="MAJI"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#070781" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

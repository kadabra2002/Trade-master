<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width= "match_parent"
        android:layout_height = "80dp"
        android:id="@+id/toolbar"
        android:background = "#070781">

        <ImageButton
            android:id="@+id/buttondrawertoggle"
            android:layout_width ="50dp"
            android:layout_height = "80dp"
            android:src="@drawable/baseline_menu_24"
            android:background="@android:color/transparent"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UZA/NUNUA APP"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="30dp"/>







    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/content"
            android:background="#FFC107"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TENGENEZA POSTA"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/backofimagetop"
                    android:src="@drawable/image2"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:id="@+id/filePreview" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backoflay1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/displaykitu"
                        android:layout_height="wrap_content"
                        android:background="#EBE3E3"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/displayphone"
                        android:layout_height="wrap_content"
                        android:background="#EBE3E3"
                        android:textColor="@color/black"
                        android:layout_margin="3dp"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="#EBE3E3"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:id="@+id/displaymkoa"/>

                </LinearLayout>


            </LinearLayout>




            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/nameofthing"
                android:hint="INGIZA JINA LA KITU"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:background="@drawable/userback"
                android:layout_margin="10dp"
                android:padding="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="INGIZA NAMBA YA SIMU"
                android:inputType="number"
                android:id="@+id/phoneno"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/userback"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="MKOA"
                android:inputType="text"
                android:id="@+id/mkoa"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/userback"/>

            <Button
                android:id="@+id/selectFileBtn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="WEKA PICHA KWA KAMERA"
                android:textSize="15dp"
                android:background="@drawable/img2back"
                android:layout_margin="10dp"
                android:padding="5dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="ONGEZA MAELEZO YA KITU"
                android:id="@+id/comments"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:background="@drawable/commentback"
                android:layout_margin="10dp"
                android:padding="5dp"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="SUBMIT"
                android:id="@+id/uploadFileBtn"
                android:textColor="@color/white"
                android:textSize="15dp"/>


        </LinearLayout>
    </RelativeLayout>



</LinearLayout>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="#141495"
    tools:context=".downloadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/turn"/>

            <TextView
                android:id="@+id/large_text"
                android:layout_width="352dp"
                android:layout_height="49dp"
                android:text="Help page"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/medium_text"
            android:layout_width="333dp"
            android:layout_height="39dp"
            android:text="Welcome to Trade. Master App"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/small_text"
            android:layout_width="337dp"
            android:layout_height="76dp"
            android:text="We're here to help you  to navigate  our app for buyying ,selling and posting  product. Below, you'll find detailed instruction and answers to common questions."
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/medium_text"
            android:layout_width="333dp"
            android:layout_height="39dp"
            android:text="download and instllation"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            tools:ignore="DuplicateIds" />
        <TextView
            android:id="@+id/medium_text"
            android:layout_width="333dp"
            android:layout_height="39dp"
            android:text="to download trade master app"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/extra_small_text"
            android:layout_width="331dp"
            android:layout_height="194dp"
            android:text="1.find Trade Master App in Google play store or App store then tap to install.\n\n2.Open Trade Master App and agree to our terms and services\n\n3.Register and verify your phone number\n\n4.Enter your name and an option profile photo also change this letter in Trade Master App by tapping more options\n"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/medium_text"
            android:layout_width="333dp"
            android:layout_height="39dp"
            android:text="To unstall trade Master"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/medium_text"
            android:layout_width="333dp"
            android:layout_height="90dp"
            android:paddingLeft="10dp"
            android:text="Go to your setting tap App and notification > Trade Master App > Unstall to remove the app and its data"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>
</RelativeLayout>